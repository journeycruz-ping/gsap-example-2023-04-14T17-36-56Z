{
    "name": "webdev-npm-starter",
    "version": "1.0.0",
    "description": "PIC starter template for building a site via npm.",
    "author": "Ping Identity",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git@gitlab.corp.pingidentity.com:web-dev/npm-starter.git"
    },
    "bugs": {
        "url": "https://gitlab.corp.pingidentity.com/web-dev/npm-starter/-/issues"
    },
    "scripts": {
        "css-compile": "node-sass src/scss/main.scss --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 src/dist/css/style.css -o /src/scss/main.scss",
        "css-prefix": "postcss src/dist/css/style.css --replace --use autoprefixer --map && browser-sync reload",
        "css": "npm-run-all css-compile css-prefix",
        "css:lint": "npm-run-all lint-scss css-compile css-prefix",
        "css-purge": "purgecss --keyframes --css src/dist/css/style.css --content src/dist/index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output src/dist/css/",
        "nodemon": "nodemon -e scss -x \"npm run css\"",
        "nodemon:lint": "nodemon -e scss -x \"npm run css:lint\"",
        "watch": "gulp watch",
        "start": "npm-run-all --parallel watch nodemon",
        "start:lint": "npm-run-all --parallel watch nodemon:lint",
        "lint-scss": "stylelint \"src/**/*.scss\"",
        "prebuild": "gulp build",
        "build": "npm run css-purge",
        "postbuild": "aem-packager --config packager-config.yaml"
    },
    "keywords": [],
    "license": "UNLICENSED",
    "devDependencies": {
        "@babel/core": "^7.21.3",
        "@babel/eslint-parser": "^7.21.3",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-decorators": "^7.21.0",
        "@babel/plugin-syntax-import-assertions": "^7.20.0",
        "@babel/plugin-transform-runtime": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@babel/register": "^7.21.0",
        "aem-packager": "^3.1.3",
        "autoprefixer": "^10.4.7",
        "babelify": "^10.0.0",
        "browser-sync": "^2.29.0",
        "browserify": "^17.0.0",
        "del": "^6.0.0",
        "eslint": "^8.36.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.27.5",
        "gulp": "^4.0.2",
        "gulp-buffer": "^0.0.2",
        "gulp-eslint-new": "^1.7.2",
        "gulp-hb": "^8.0.0",
        "gulp-htmlmin": "^5.0.1",
        "gulp-notify": "^4.0.0",
        "gulp-replace": "^1.1.4",
        "gulp-terser": "^2.1.0",
        "handlebars": "^4.7.7",
        "node-sass": "^8.0.0",
        "nodemon": "^2.0.22",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.21",
        "postcss-cli": "^10.1.0",
        "purgecss": "^5.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-sass-guidelines": "^7.0.0",
        "stylelint-config-standard": "^21.0.0",
        "stylelint-scss": "^3.14.0",
        "vinyl-source-stream": "^2.0.0"
    },
    "dependencies": {
        "@lottiefiles/lottie-interactivity": "^1.6.2",
        "@lottiefiles/lottie-player": "^1.7.1",
        "bootstrap": "^5.3.0-alpha1",
        "gsap": "npm:@gsap/shockingly@^3.11.5"
    }
}
