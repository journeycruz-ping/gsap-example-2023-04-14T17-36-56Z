{
    "extends": ["stylelint-config-standard", "stylelint-config-sass-guidelines"],
    "plugins": [
        "stylelint-scss"
    ],
    "ignoreFiles": ["/node_modules/**", "/dist/**", "/target/**"],
    "rules": {
        "at-rule-empty-line-before": [
            "always",
            {
                "except": ["after-same-name", "blockless-after-blockless", "first-nested"],
                "ignore": ["after-comment", "inside-block", "blockless-after-same-name-blockless"]
            }
        ],
        "at-rule-no-unknown": null,
        "max-nesting-depth": 5,
        "scss/at-rule-no-unknown": true,
        "selector-class-pattern": null,
        "selector-max-compound-selectors": 6,
        "selector-type-no-unknown": [true, { "ignore": ["custom-elements", "default-namespace"] }],
        "color-named": null,
        "order/properties-alphabetical-order": null
    }
}