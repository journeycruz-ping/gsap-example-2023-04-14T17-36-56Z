{
    "env": {
        "node": true,
        "browser": true,
        "commonjs": true,
        "es6": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "babelOptions": {
            "parserOpts": {
                "plugins": [
                    "importAssertions"
                ]
            }
        }
    },
    "parser": "@babel/eslint-parser",
    "ignorePatterns": [
        "node_modules/**",
        "dist/**",
        "target"
    ],
    "globals": {},
    "rules": {
        "import/extensions": [
            "error",
            {
                "js": "never",
                "mjs": "always"
            }
        ],
        "indent": [
            "error",
            4
        ],
        "max-len": "off",
        "no-multiple-empty-lines": "off",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-underscore-dangle": "off",
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true
            }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ]
    }
}